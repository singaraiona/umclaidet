
(de menu (Ttl . Prg)
   (action
      (html 0 Ttl *Css NIL
         (<ping> 7)
         (<layout>
            ((180 0 'menu)
               (<div> @
                  (expires)
                  (<menu>
                     (T ,"Main menu"
                        (,"Home" "!work")
                        (,"Logout" (and *Login "!stop")) )
                     (NIL (<hr>))
                     (T ,"Data"
                        (,"Suppliers" (and (may Supplier) "app/supplier.l"))
                        (,"Categories" (and (may Category) "app/category.l"))
                        (,"Products" (and (may Product) "app/product.l")) )
                     (NIL (<hr>))
                     (T ,"Registration"
                        (,"Events" (and (may Event) "app/event.l")) )
                     (NIL (<hr>))
                     (T ,"Import"
                        (,"Import from CSV" (and (may Import) "app/import.l")) )
                     (NIL (<hr>))
                     (T ,"Report"
                        (,"Remains" (and (may Report) "app/remains.l"))
                        (,"Analytic" (and (may Report) "app/analytic.l")) ) ) )
               ((NIL NIL 'main)
                  (<div> @ (run Prg 1)) ) ) ) ) ) )

(de work ()
   (setq *Url "!work")
   (and (app) (setq *Menu 31))
   (menu *ProjectTitle
      (<h2> NIL *ProjectTitle)
      (<img> "img/collect.png" "Logo" NIL "100%")
      (----)
      (loginForm) ) )

(de stop ()
   (logout)
   (work) )

(de choSup (Dst)
   (diaform '(Dst)
      (<grid> "-.-"
         ,"Number" (gui 'nr '(+Var +NumField) '*SupNr 10)
         (searchButton '(init> (: home query)))
         ,"Name" (gui 'name '(+Focus +Var +TextField) '*SupNm 30)
         (resetButton '(nr name)) )
      (gui 'query '(+QueryChart) (cho)
         '(goal
            (quote
               @Nr (and *SupNr (cons @ T))
               @Nm *SupNm
               (select (@@)
                  ((nr +Supplier @Nr) (name +Supplier @Nm))
                     (range @Nr @@ nr)
                     (tolr @Nm @@ name) ) ) )
         3
         '((This) (list This (: nr) (: name)) ) )
      (<table> 'chart NIL
         (quote
            (btn)
            (align, "#")
            (NIL ,"Name") )
         (do (cho)
            (<row> (alternating)
               (gui 1 '(+DstButton) Dst)
               (gui 2 '(+NumField))
               (gui 3 '(+TextField)) ) ) )
      (<spread>
         (scroll (cho))
         (newButton T Dst '(+Supplier)
            '(nr genKey 'nr '+Supplier)
            'name *SupNm)
         (cancelButton) ) ) )

