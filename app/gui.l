(de choProd (Dst)
   (diaform '(Dst)
      (<grid> "-.-"
         ,"Code" (gui 'nr '(+Var +NumField) '*ProdNr 10)
         (searchButton '(init> (: home query)))
         ,"Category" (gui 'category '(+Var +TextField) '*ProdCat 30)
         (resetButton '(nr category title supplier query))
         ,"Title" (gui 'title '(+Var +TextField) '*ProdTtl 30)
         (gui '(+Button) *Pdf '(url (print::products (val> (: home query)))))
         ,"Supplier" (gui 'supplier '(+Var +TextField) '*ProdSup 30)
         NIL )
      (gui 'query '(+QueryChart) (cho)
         '(goal
            (quote
               @Nr  (and *ProdNr (cons @ T))
               @Cat *ProdCat
               @Ttl *ProdTtl
               @Sup *ProdSup
               (select (@@)
                  ((nr +Product @Nr)
                     (category +Product @Cat)
                     (title +Product @Ttl)
                     (name +Supplier @Sup (supplier +Product)) )
                  (range @Nr @@ nr)
                  (part  @Cat @@ category)
                  (part  @Ttl @@ title)
                  (tolr  @Sup @@ supplier name) ) ) )
         5
         '((This) (list This (: nr) (: category) (: title) (: supplier)) ) )
      (<table> 'chart NIL
         (quote
            (btn)
            (align ,"Code")
            (NIL   ,"Category")
            (NIL   ,"Title")
            (NIL   ,"Supplier") )
         (do (cho)
            (<row> (alternating)
               (gui 1 '(+DstButton) Dst)
               (gui 2 '(+NumField))
               (gui 3 '(+ObjView +TextField) '(: name))
               (gui 4 '(+TextField))
               (gui 5 '(+ObjView +TextField) '(: name)) ) ) )
      (<spread>
         (scroll (cho))
         (newButton T Dst '(+Product)
            'nr (utils::prodkey (val> (: home category)))
            'title *ProdTtl )
         (cancelButton) ) ) )

(de choEvt (Dst)
   (diaform '(Dst)
      (<grid> "--.-..-"
         ,"Number"     (gui 'nr '(+Var +NumField) '*EvtNr 10)
         ,"Date"       (gui 'date '(+Var +DateField)     '*EvtDat 10)
         ,"Event type" (gui 'tp '(+Var +Map +TextField)  '*EvtTp '((*Income . 1) (*Expense . 2)) '(*Income *Expense))
         (searchButton '(init> (: home query)))
         ,"Title"      (gui 'product '(+Var +TextField)  '*EvtProd 10)
         ,"Quantity"   (gui 'quantity '(+Var +NumField)  '*EvtQt 10)
         ,"Sell price" (gui 'sellprice '(+Var +FixField) '*EvtSpr 2 10)
         (resetButton '(nr date tp product quantity sellprice buyprice notes query))
         ,"Buy price"  (gui 'buyprice '(+Var +FixField)  '*EvtBpr 2 10)
         ,"Notes"      (gui 'notes '(+Var +TextField)    '*EvtNts 10)
         NIL NIL
         (gui '(+Button) *Pdf '(url (print::events (val> (: home query)) (val> (: home tp)) ))) )
      (gui 'query '(+QueryChart) (cho)
         '(goal
            (quote
               @Nr (and *EvtNr (cons @ T))
               @Dt (and *EvtDat (cons @ T))
               @Tp *EvtTp
               @Prd *EvtProd
               @Qt (and *EvtQt (cons @ T))
               @Spr (and *EvtSpr (cons @ T))
               @Bpr (and *EvtBpr (cons @ T))
               @Nts *EvtNts
               (select (@@)
                  ((nr +Event @Nr)
                     (date +Event @Dt)
                     (tp +Event @Tp)
                     (title +Product @Prd (product +Event))
                     (quantity +Event @Qt)
                     (sellprice +Event @Spr)
                     (buyprice +Event @Bpr)
                     (notes +Event @Nts) )
                  (range @Nr @@ nr)
                  (range @Dt @@ date)
                  (same @Tp @@ tp)
                  (tolr @Prd @@ product title)
                  (range @Qt @@ quantity)
                  (range @Spr @@ sellprice)
                  (range @Bpr @@ buyprice)
                  (tolr @Nts @@ notes) ) ) )
         12
         '((This) (list This
                     (: nr)
                     (: date)
                     (utils::strTp (: tp))
                     (: product)
                     (: quantity)
                     (: sellprice)
                     (* (: sellprice) (: quantity)) (: buyprice)
                     (* (: buyprice) (: quantity))
                     (- (* (: sellprice) (: quantity)) (* (: buyprice) (: quantity)))
                     (: notes) ) ) )
      (<table> 'chart NIL
         (quote
            (btn)
            (align, "#")
            (NIL ,"Date")
            (NIL ,"Event type")
            (NIL ,"Title")
            (NIL ,"Quantity")
            (NIL ,"Sell price")
            (NIL ,"Sell sum")
            (NIL ,"Buy price")
            (NIL ,"Buy sum")
            (NIL ,"Charge")
            (NIL ,"Notes") )
         (do (cho)
            (<row> (alternating)
               (gui 1  '(+DstButton) Dst)
               (gui 2  '(+NumField))
               (gui 3  '(+DateField))
               (gui 4  '(+TextField))
               (gui 5  '(+ObjView +TextField) '(: title))
               (gui 6  '(+NumField))
               (gui 7  '(+FixField) 2)
               (gui 8  '(+FixField) 2)
               (gui 9  '(+FixField) 2)
               (gui 10 '(+FixField) 2)
               (gui 11 '(+FixField) 2)
               (gui 12 '(+TextField)) ) ) )
      (<spread>
         (scroll (cho))
            (newButton T Dst '(+Event)
               '(nr genKey 'nr '+Event)
               'date (date)
               'tp *EvTp) )
            (cancelButton) ) )

